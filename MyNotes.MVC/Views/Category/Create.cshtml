@*@model MyNotes.EntityLayer.Category*@
@model MyNotes.BusinessLayer.ValueObject.CategoryViewModel

@{
    ViewBag.Title = "Kategori Ekle";
}
<link href="~/Content/ValidationStyle.css" rel="stylesheet" />

<div class="container">
    <div class="row mt-5 mb-3">
        <div class="col-md-6 offset-md-3">
            <h3>@ViewBag.Title</h3>
        </div>
    </div>
    <div class="row d-flex">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal row">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row my-2">
                        @Html.LabelFor(model => model.Category.Title, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Category.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Category.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row my-2">
                        @Html.LabelFor(model => model.Category.Description, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Category.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Category.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*@Html.HiddenFor(model => model.Category.CreatedOn)
                    @Html.HiddenFor(model => model.Category.ModifiedOn)
                    @Html.HiddenFor(model => model.Category.ModifiedUserName)*@


                    <div class="row my-2">
                        <div class="d-flex justify-content-around">
                            @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-outline-dark" })
                            <button type="submit" value="Kaydet" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>






